generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  username String   @unique
  password String
  avatar   String?
  createAt DateTime @default(now())
  Office   Office[]
}

model Office {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Int
  images      String
  address     String
  city        String
  latitude    String
  longitude   String
  room        Int
  desk        Int
  meetingRoom Int
  createAt    DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
}
